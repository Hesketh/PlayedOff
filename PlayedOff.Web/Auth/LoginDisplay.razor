<AuthorizeView>
    <Authorized>
        <MudMenu AnchorOrigin="Origin.TopRight">
            <ActivatorContent>
                <MudAvatar Color="Color.Primary"
                           Size="Size.Medium"
                           Style="cursor:pointer;">
                    @GetInitials(context.User.Identity?.Name)
                </MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem OnClick="BeginSignOut">Sign out</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudIconButton OnClick="BeginSignIn" Icon="@Icons.Material.Filled.Login"/>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private string GetInitials(string? name)
    {
        if (string.IsNullOrEmpty(name))
            return string.Empty;

        return string.Join(string.Empty, name.Split(' ')
            .Where(part => !string.IsNullOrEmpty(part))
            .Select(part => part[0].ToString().ToUpperInvariant())
            .Take(2));
    }
}
